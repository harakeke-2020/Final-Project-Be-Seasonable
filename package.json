{
  "name": "boilerplate-react-webpack",
  "version": "0.2.2",
  "description": "A webpack React starter",
  "repository": "https://github.com/dev-academy-challenges/boilerplate-react-webpack.git",
  "main": "server/index.js",
  "engines": {
    "node": "10.19.0"
  },
  "author": "EDA",
  "license": "ISC",
  "scripts": {
    "build": "webpack --config client/webpack.config.js",
    "server": "run-s build start",
    "start": "node server",
    "pretest": "eslint .",
    "test": "jest --verbose --noStackTrace",
    "test:watch": "npm test -- --watchAll",
    "dev": "run-p dev:server dev:client",
    "dev:server": "nodemon server",
    "dev:client": "webpack --config client/webpack.config.js --watch",
    "knex": "knex --knexfile server/db/knexfile.js",
    "db:reset": "run-s db:delete db:migrate db:seed",
    "db:migrate": "npm run knex migrate:latest",
    "db:seed": "npm run knex seed:run",
    "db:delete": "rm -f server/db/dev.sqlite3",
    "postinstall": "run-s db:reset build",
    "nightwatch": "nightwatch",
    "e2e": "npm-run-all db:migrate db:seed --parallel start build nightwatch"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "jest": {
    "setupFiles": [
      "./client/tests/config/jsdom.js"
    ],
    "testPathIgnorePatterns": [
      "tests/e2e"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.3",
    "babel-eslint": "^10.1.0",
    "express": "^4.17.1",
    "knex": "^0.20.10",
    "npm-run-all": "^4.1.5",
    "pg": "^7.18.2",
    "react-meta-tags": "^0.7.4",
    "react-redux": "^7.2.0",
    "redux-persist": "^6.0.0",
    "superagent": "^5.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/register": "^7.8.6",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-standard": "^4.0.1",
    "geckodriver": "^1.19.1",
    "jest": "^29.6.1",
    "nightwatch": "^3.0.1",
    "nock": "^12.0.1",
    "nodemon": "^2.0.2",
    "offline-plugin": "^5.0.7",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-test-renderer": "^16.13.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "sqlite3": "^4.2.0",
    "supertest": "^4.0.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
